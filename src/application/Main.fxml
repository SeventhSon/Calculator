<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="mRoot" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="application.MainController">
  <!-- TODO Add Nodes -->
  <center>
    <LineChart fx:id="mChart" prefWidth="695.0" title="Set Title">
      <xAxis>
        <NumberAxis label="X" side="BOTTOM" />
      </xAxis>
      <yAxis>
        <NumberAxis label="Y" side="LEFT" />
      </yAxis>
    </LineChart>
  </center>
  <right>
    <TitledPane animated="false" prefHeight="403.0" text="Functions">
      <content>
        <AnchorPane id="Content" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <HBox layoutX="0.0" layoutY="0.0" prefHeight="22.0" prefWidth="200.0">
              <children>
                <TextField fx:id="mFormulaTextBox" onAction="#addFunction" prefWidth="200.0" promptText="Input formula" />
                <Button mnemonicParsing="false" text="+" />
              </children>
            </HBox>
          </children>
        </AnchorPane>
      </content>
      <BorderPane.margin>
        <Insets bottom="10.0" right="10.0" top="35.0" />
      </BorderPane.margin>
    </TitledPane>
  </right>
  <top>
    <HBox prefHeight="22.0" prefWidth="907.0" spacing="10.0">
      <children>
        <Button mnemonicParsing="false" onAction="#plot" text="Plot" />
        <Button mnemonicParsing="false" onAction="#export" text="Export" />
        <Button mnemonicParsing="false" onAction="#reset" text="Reset" />
        <TextField onAction="#setTitle" prefWidth="65.0" promptText="Set title" />
        <TextField onAction="#setXLabel" prefWidth="83.0" promptText="X axis label" />
        <TextField onAction="#setYLabel" prefWidth="83.0" promptText="Y axis label" />
        <ChoiceBox>
          <items>
            <FXCollections fx:factory="observableArrayList">
              <String fx:value="Dashed" />
              <String fx:value="Dotted" />
              <String fx:value="Solid" />
            </FXCollections>
          </items>
        </ChoiceBox>
        <ColorPicker />
        <TextField prefWidth="96.0" promptText="Domian start" text="" onAction="#setDomainS"/>
        <TextField prefWidth="96.0" promptText="Domain end" onAction="#setDomainE"/>
      </children>
      <padding>
        <Insets left="20.0" />
      </padding>
      <BorderPane.margin>
        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
      </BorderPane.margin>
    </HBox>
  </top>
</BorderPane>
